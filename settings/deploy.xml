<?xml version="1.0" encoding="UTF-8"?>

<project name="phing-drupal" default="deploy">

	<target name="properties">
	  <property name="make.dir" value="htdocs" />
	  <property name="remote.host" value="localhost" />
	  <property name="remote.path" value="/tmp" />
	</target>

	<target name="deploy" depends="properties">
	  <echo msg="Deploying to server" />
	  <exec command="cat htdocs/build.txt`"/>
	  <exec command="scp -rq ${make.dir} ${remote.host}:${remote.path}/builds/`cat htdocs/build.txt`" 
	    logoutput="yes" />
  	</target>

</project>
